{
    "name": "Refresher MV2",
    "description": "Timer for page refresh",
    "version": "0.1.0",
    "manifest_version": 2,
    "icons": {
        "16": "./images/icon-16x16.png",
        "32": "./images/icon-32x32.png",
        "128": "./images/icon-128x128.png"
    },
    "background": {
        "scripts":[ "./background.js"]
    },
    "browser_action": {
        "default_popup":"popup.html"
    },
    "options_page": "./options.html",
    "permissions": [
        
        "activeTab",
        "tabs",
        "storage",
        "<all_urls>",
        "http://*/*", 
        "https://*/*"

    ]
}